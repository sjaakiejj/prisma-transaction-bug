{
  "compilerOptions": {
    "target": "ES2020",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "module": "commonjs",
    "rootDirs": [
      "./src"
    ],
    "outDir": "./build",
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.js"
  ],
  "exclude": [
    "node_modules",
  ]
}